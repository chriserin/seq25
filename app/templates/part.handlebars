<section id='status-bar'>
  {{#each part in parts}}
    {{render 'part-status' part}}
  {{/each}}
</section>
<section id='piano-roll'>
  <section id='grid'>
    {{play-bar part=this transport=transport}}
    {{beat-list content=beats}}
    <ul>
      {{#each pitch in pitches}}
        {{render 'pitch' pitch}}
      {{/each}}
    </ul>
  </section>
  <ul id='keyboard'>
    {{#each pitch in pitches}}
      {{#render 'piano-key' pitch}}
        {{name}}
      {{/render}}
    {{/each}}
  </ul>
</section>
